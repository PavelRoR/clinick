                // pointer-events: none
.contact_form
    border: 3px solid green
    padding: 20px
    margin: 30px auto
    width: 265px;
    background-color: #fff
    h4
        font-size: 16px;
        font-family: "OpenSansBold",sans-serif;
        color: green
        text-transform: uppercase;
        line-height: 1.389;
        text-align: left;
        margin-bottom: 13px
        &:before
            content: url(../img/rec.jpg)
            margin-right: 8px
            vertical-align: middle
            height: inherit
    .calendar
        float: left
        margin-right: 16px
    .select
        border: 1px solid #b3b3b3
        border-radius: 19px;
        margin-bottom: 16px
        color: grey
        font-size: 14px;
        font-family: "OpenSansLight", sans-serif;
        color: #969a98
        height: 40px
        line-height: 40px
        position relative
        overflow hidden
        &:after
            content: url('../img/select.png')
            height: 46px;		
            width: 22px;
            position: absolute	
            right: 0px;
            top: -3px;
            bottom: 0;
            z-index: 150;	
    .select.month
        clear both
        width: 100%
    .select.day
        float: right 
        width: 155px
    input
    textarea
        border: 1px solid #b3b3b3
        border-radius: 19px;
        padding: 0 20px
        margin-bottom: 16px
        color: grey
        font-size: 14px;
        font-family: "OpenSansLight", sans-serif;
        color: #969a98
        height: 40px
        line-height: 40px
    select
        position: relative;		
        background: none;	
        z-index: 100;
        border: 2px solid #fff
        padding: 0 0 0 20px
        width: 120%
        height: 42px;
        position: relative;
        top: -1px;
        left: -1px;
    input
    textarea
        width: 100%
    textarea
        min-height: 100px
        clear: both
        line-height: 16px
        padding: 7px 20px
