#aside
    width: 265px
    float: left
    ul
        list-style: none
        li
            min-height: 40px
            &:hover
            &.active    
                background-color: rgba(0, 0, 0, .08);
                a
                    color green
            a
                display block
                font-size: 16px;
                font-family: "OpenSans", sans-serif;
                color: rgba(54, 56, 55, 0.8)
                text-align: left;
                width: 100%
                height: inherit
                padding: 15px 25px
