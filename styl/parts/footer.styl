#footer
	background-color: green 
	padding: 40px 0 25px
	text-align: center
	h5
		font-size: 14px;
		font-family: "OpenSansBold", sans-serif;
		color: #fff
		text-transform: uppercase;
	p
		font-size: 14px;
		font-family: "OpenSans", sans-serif;
		color: #fff
		line-height: 20px
		margin-bottom: 15px
	.col-md-4:nth-child(2)
		p
			text-transform: uppercase
.soc_buttons
	margin: 30px auto 0;
	width: 52%;
	a
		&:nth-child(2)
			margin: 0 30px
		.fa
			font-size: 23px;		
			color: green
			background-color: #fff
			border-radius: 10px;
			height: 30px;
			width: 30px
			padding-top: 4px;
.modal-dialog
	margin: 15px auto
.modal-content
	padding: 40px 0
.close
	border: 0;
	background: transparent;
	color: green;
	font-size: 48px;
	font-family: "OpenSansBold", arial;
	position: relative;
	right: 21px;
	top: -45px;
	z-index: 9;
	float: right;
	&:hover
		color: h3_color
#form_2.contact_form
	margin-top: 0
.up
	display: none;
	position: fixed;
	bottom: 20px;
	right: calc(50% - 630px);
	text-align: center;
	text-decoration: none;
	transition: 400ms;
	background-color: transparent
	border-radius: 50%;
	.fa
		border-radius: 50%;
		display block
		color: green
		font-size: 54px;
		box-shadow: 0px 3px 8px 2px rgba(0,0,0,0.3)
		background-color: #fff
		height: 54px;
		width: 54px;
	&:hover
		color: h3_color
	&:focus
		color: green	
