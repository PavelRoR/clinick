#testimonials
    h3+p
        font-size: 16px;
        font-family: "Open Sans";
        color: p_black
        line-height: 1.5;
        text-align: center;
        margin-top: 20px
#testimonials_slider
    margin-top: 70px
.crsl-item.col-md-4
    padding-top: 3px;
.slider_container
    .item
        border: 1px solid grey
        border-radius: 50px;
        box-shadow: 0px 2px 5px 0px rgba(0, 0, 0, 0.2);
        height: 280px;
        padding: 25px
        position relative
        margin-bottom: 60px
        img
            display block
            width: 100px
            margin: 0 auto 10px
.testimonial
    font-size: 14px;
    font-family: "OpenSans",sans-serif;
    color: p_black
    line-height: 1.429;
    text-align: center;
    margin-bottom: 10px
.req
    position: absolute
    bottom: 20px
    left: 25px
    overflow hidden
    width: 83%
.name
    font-size: 14px;
    font-family: "OpenSansBoldItalic", sans-serif;
    color: h3_color
    line-height: 1.429;
    float: left
.date
    font-size: 14px;
    font-family: "OpenSansItalic",sans-serif;
    color: #c4c7c5
    line-height: 1.429;
    float: right
#navbtns
    clear both
    width: 300px
    margin: 0  auto
    a
        width 110px
        height 40px
        border-radius: 15px
        border: 3px solid green
        line-height: 36px
        text-align: center
        color: green
        &:hover
            border-color h3_color
            color: h3_color
        &.previous
            float left
        &.next
            float right
#high
    height: 172px;
    overflow-y: scroll;